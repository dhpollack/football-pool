@default:
    @just -u -l

build:
    go build -o football-pool ./cmd/main.go

tidy:
    go mod tidy

run:
    go run ./cmd/main.go

run-bin:
    ./football-pool

seed *args:
    go run ./cmd/seed/main.go {{ args }}

seed-backend:
    go build -o /seed ./cmd/seed/main.go
    /seed --dsn "file::memory:?cache=shared" users /app/backend/seed/admin.json

lint:
    golangci-lint run ./...

format:
    go fmt ./...

test *args="-cover -coverprofile=coverage.txt ./...":
    go test {{ args }}
