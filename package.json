{
  "name": "football-pool",
  "private": true,
  "version": "0.0.0",
  "description": "Football pool web application",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "semantic-release": "^24.2.1",
    "semantic-release-monorepo": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhpollack/football-pool.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      ["@semantic-release/commit-analyzer", {
        "preset": "angular"
      }],
      ["@semantic-release/release-notes-generator", {
        "preset": "angular"
      }],
      ["@semantic-release/changelog", {
        "changelogFile": "CHANGELOG.md"
      }],
      ["@semantic-release/npm", {
        "pkgRoot": "."
      }],
      ["@semantic-release/exec", {
        "prepareCmd": "yq eval '.version = \"${nextRelease.version}\"' -i helm/football-pool/Chart.yaml"
      }],
      ["@semantic-release/git", {
        "assets": ["CHANGELOG.md", "package.json", "helm/football-pool/Chart.yaml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }],
      ["@semantic-release/github", {}]
    ]
  }
}