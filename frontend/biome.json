{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "useIgnoreFile": true,
    "clientKind": "git",
    "root": ".."
  },
  "overrides": [
    {
      "includes": ["src/services/api/**/*.msw.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["public/mockServiceWorker.js"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
